.row
  .span3
    %h3= yield :title
    = f.fields_for @itinerary_route do |route_fields|
      = route_fields.text_field :from, class: 'input-xlarge width-max'
      = route_fields.text_field :to, class: 'input-xlarge width-max'
      = route_fields.check_box :avoid_highways
      = route_fields.check_box :avoid_tolls
      = route_fields.button t('.get_route'), type: 'button', class: 'btn btn-primary', id: 'get-route'
      = image_tag 'ajax-spinner-24x17.gif', width: 24, height: 17, alt: '...', id: 'itineraries-spinner', class: 'hide'
    .spacer
    #error.alert.alert-error
    #result.alert.alert-info
      #{t('.distance')}:
      %b#distance
      %br
      #{t('.duration')}:
      %b#duration
  .span9
    #new-itinerary-map.google-maps
    %p#route-helper.hide
      %small
        Da:
        %span#from-helper
        a:
        %span#to-helper
.row
  .span12
    .spacer
  .span4
    %h3.no-margin
      %i.icon-eye-close
      = t('.hint_privacy_title')
    %p
      = t('.hint_privacy_content')
  .span4
    %h3.no-margin
      %i.icon-wrench
      = t('.hint_customize_title')
    %p
      = t('.hint_customize_content')
  .span4
    %h3.no-margin
      %i.icon-search
      = t('.hint_search_before_title')
    %p
      = t('.hint_search_before_content', search_link: (link_to t('.search_link'), itineraries_path)).html_safe
