.table-responsive
  %table.table.table-itinerary
    %thead
      %tr
        %th= Itinerary.human_attribute_name(:start_address)
        %th= Itinerary.human_attribute_name(:end_address)
        %th
          %span.visible-xs
            %span.fa.fa-info-circle{ rel: 'tooltip', title: t('itineraries.common.features') }
          %span.hidden-xs= t('itineraries.common.features')
        - if edit
          %th= t('helpers.actions')
        - else
          %th= User.model_name.human
          %th= Itinerary.human_attribute_name(:leave_date)
    %tbody
      - itineraries.each_with_index do |itinerary, index|
        %tr.vertical-align-middle
          %td= link_to itinerary.start_address, itinerary_path(itinerary)
          %td= link_to itinerary.end_address, itinerary_path(itinerary)
          %td
            - if itinerary.pink
              %i.text-pink.icon-lock.tooltipable{ rel: 'tooltip', title: Itinerary.human_attribute_name(:pink) }
            - if itinerary.daily
              %span.fa.fa-repeat.tooltipable{ rel: 'tooltip', title: Itinerary.human_attribute_name(:daily) }
            - if itinerary.round_trip
              %span.fa.fa-exchange.tooltipable{ rel: 'tooltip', title: Itinerary.human_attribute_name(:round_trip) }
          - if edit
            %td.btn-toolbar
              = link_to edit_itinerary_path(itinerary), class: 'btn btn-s btn-default' do
                %span.fa.fa-edit
                = t('helpers.links.edit')
              = link_to itinerary_path(itinerary), method: :delete, data: { confirm: t('helpers.links.confirm') }, class: 'btn btn-sm btn-danger' do
                %span.fa.fa-trash-o
                = t('helpers.links.destroy')
          - else
            %td= link_to itinerary.user, user_path(itinerary.user)
            %td= l(itinerary.leave_date.in_time_zone, format: :short)
