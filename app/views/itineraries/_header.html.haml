.page-header
  %h1.no-margin-bottom= @itinerary.title
.row.itinerary-header
  .col-sm-6
    = image_tag @itinerary.static_map, class: 'google-static-map img-responsive', alt: ''
  .col-sm-6
    %h2.h4
      %span.text-muted #{Itinerary.human_attribute_name :start_address}:
      = @itinerary.start_address
    %h2.h4
      %span.text-muted #{Itinerary.human_attribute_name :end_address}:
      = @itinerary.end_address
    - if @itinerary.daily?
    - else
      %h3.h4
        %span.text-muted #{Itinerary.human_attribute_name :leave_date}:
        = l(@itinerary.leave_date, format: :long)
      - if @itinerary.round_trip?
        %h3.h4
          %span.text-muted #{Itinerary.human_attribute_name :return_date}:
          %span= l(@itinerary.return_date, format: :long)
    .media#user-media
      = link_to user_path(@itinerary.user), class: 'pull-left' do
        = user_profile_picture @itinerary.user, style: 'media-object'
      .media-body
        %h4.media-heading
          - if logged_in?
            = link_to @itinerary.user, user_path(@itinerary.user)
          - else
            = t('.app_user', appname: APP_CONFIG.app_name)
        %p.pre-line= @itinerary.description
