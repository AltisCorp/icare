- title t('meta_description', appname: APP_CONFIG.app_name)
- content_for :head do
  %meta{ name: 'description', content: t('meta_description', appname: APP_CONFIG.app_name) }

#fb-root
#splashscreen
  .div-table#splashscreen-container
    .div-table-cell
      %h1
        = APP_CONFIG.app_name
        - if APP_CONFIG.demo_mode
          %small
            demo
      %h2= t('.tagline')
      = render 'facebook_login'
  .attribution
    _IGP5461 | 70 by Ben Fredericson (xjrlokix), on Flickr
  .learn-more-container.hidden-xs.text-center
    = link_to t('.learn_more'), '#', class: 'btn btn-lg btn-default btn-learn-more'
.container
  #learn-more
    .ribbon-container
      .ribbon
        .ribbon-content
          %h2= t('.what_is_appname', appname: APP_CONFIG.app_name)
    %p.lead=  t('meta_description', appname: APP_CONFIG.app_name)
  .ribbon-container
    .ribbon
      .ribbon-content
        %h2= t('.main_features')
  #featurettes
    .row
      .col-sm-4.featurette
        %span.fa.fa-road
        %h3= t('.share_itinerary_title')
        %p= t('.share_itinerary_content')
      .col-sm-4.featurette
        %span.fa.fa-group
        %h3= t('.make_new_connections_title')
        %p= t('.make_new_connections_content')
      .col-sm-4.featurette
        %span.fa.fa-money
        %h3= t('.save_money_title')
        %p= t('.save_money_content')
    .row
      .col-sm-4.featurette
        %span.fa.fa-magic
        %h3= t('.thats_easy_title')
        %p= t('.thats_easy_content')
      .col-sm-4.featurette
        %span.fa.fa-leaf
        %h3= t('.help_environment_title')
        %p= t('.help_environment_content')
      .col-sm-4.featurette
        %span.fa.fa-github
        %h3= t('.open_source_title')
        %p= t('.open_source_content', appname: APP_CONFIG.app_name, source_code_link: link_to(  t('.source_code'), APP_CONFIG.repository_url)).html_safe
  .ribbon-container
    .ribbon
      .ribbon-content
        %h2= t('.join_us_today')
  .row
    .col-sm-6
      #facepile-container.hide
        .fb-facepile{ data: { size: 'medium', :"max-rows" => '1' } }
    .col-sm-6= render 'facebook_login'
  = render 'shared/modal_why_facebook'
