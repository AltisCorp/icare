= bootstrap_form_for @conversation, validate: false, html: { class: "form-horizontal" } do |f|
  = hidden_field_tag :itinerary_id, @itinerary.id if @itinerary
  = f.error_messages
  = f.fields_for Message.new do |m|
    = m.text_area :body, rows: 5, class: "input-xxlarge"
  .form-actions
    = f.submit class: "btn btn-primary"
