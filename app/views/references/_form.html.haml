= bootstrap_form_for [current_user, @reference], validate: true, html: { class: 'form-vertical' } do |f|
  = hidden_field_tag :itinerary_id, @itinerary.id
  = f.error_messages
  = f.text_area :body, rows: 5, class: 'input-xxlarge', placeholder: t('.write_a_reference'), skip_label: true
  .control-group
    .controls
      .btn-group.btn-group-radio
        = f.default_tag :radio_button, :rating, -1
        = f.label :rating, value: -1, class: 'btn' do
          %i.icon-thumbs-down
          = Reference.human_attribute_name(:rating_negative)
        = f.default_tag :radio_button, :rating, 0
        = f.label :rating, value: 0, class: 'btn' do
          = Reference.human_attribute_name(:rating_neutral)
        = f.default_tag :radio_button, :rating, 1
        = f.label :rating, value: 1, class: 'btn' do
          %i.icon-thumbs-up
          = Reference.human_attribute_name(:rating_positive)
  .form-actions
    = f.submit class: 'btn btn-primary'
