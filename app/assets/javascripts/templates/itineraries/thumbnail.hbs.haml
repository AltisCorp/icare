.span6.itinerary-thumbnail
  .caption.itinerary-thumb-stroke{ style: "border-color: {{borderColor}}" }
    %table
      %tbody
        %tr
          %td.user-profile-picture.verified
            .img-outset
              %img{ src: "{{user.profile_picture}}", width: 50, height: 50, alt: "" }
          %td
            %strong.it-title
              %a.pre-line{ href: "{{url}}" }><
                {{start_address}}
                %br
                {{end_address}}
            %p.it-user
              {{user.name}}
              {{#if user.facebook_verified}}
              %span.fa.fa-check.text-success.facebook-verified-tooltip.inline-block{ rel: "tooltip", title: "{{translate \"templates.itineraries.facebook_verified\"}}" }
              {{/if}}
    %p.itinerary-details
      {{#if pink}}
      %span.text-pink
        %span.fa.fa-lock
        {{translate "mongoid.attributes.itinerary.pink"}}
      %br
      {{/if}}
      {{#if daily}}
      %br
      %span.fa.fa-repeat
      {{translate "mongoid.attributes.itinerary.daily"}}
      %span.fa.fa-clock-o
      {{localize "time.formats.time_only" leave_date}}
      {{else}}
      {{translate "mongoid.attributes.itinerary.leave_date"}}:
      {{localize "date.formats.long" leave_date}}
      %span.fa.fa-clock-o
      {{localize "time.formats.time_only" leave_date}}
      {{#if round_trip}}
      %br
      {{translate "mongoid.attributes.itinerary.return_date"}}:
      {{localize "date.formats.long" return_date}}
      %span.fa.fa-clock-o
      {{localize "time.formats.time_only" return_date}}
      {{/if}}
      {{/if}}
      %br
      {{translate "mongoid.attributes.itinerary.fuel_cost"}}:
      {{fuel_cost}}.00 &euro;
      %br
      {{translate "mongoid.attributes.itinerary.tolls"}}:
      {{tolls}}.00 &euro;
    .btn-toolbar
      %a.btn.btn-xs.show-itinerary-on-map{ href: "#", data: { id: "{{id}}" } }
        {{translate "templates.itineraries.show_on_map"}}
      %a.btn.btn-xs.btn-primary{ href: "{{url}}" }
        {{translate "templates.itineraries.read_more"}}
