###global $:false, I18n:false###

'use strict'

window.icare = window.icare || {}
icare = window.icare

I18n.defaultLocale = '<%= I18n.default_locale %>'
I18n.locale = $('html').attr 'lang'

String::capitalize = ->
  this.replace /(?:^|\s)\S/g, (c) ->
    c.toUpperCase()

setLoadingStatus = ->
  $('#loading-spinner').show()

unsetLoadingStatus = ->
  $('#loading-spinner').fadeOut()

# Turbolinks
$(window).on 'page:fetch', setLoadingStatus
$(window).on 'page:change', unsetLoadingStatus
